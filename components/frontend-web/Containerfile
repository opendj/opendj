# =============================================================================
# Multi-stage build for OpenDJ Frontend Web Component
# =============================================================================

# -----------------------------------------------------------------------------
# Stage 1: Build the Angular application
# -----------------------------------------------------------------------------
FROM registry.access.redhat.com/ubi9/nodejs-20:latest AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies with legacy peer deps flag
RUN npm ci --legacy-peer-deps

# Copy source code (excluding conf folder - this will be provided by a ConfigMap)
COPY --exclude=src/conf . . 

# Build the Angular app for production
RUN npm run build

# Make Directory for Config:
RUN mkdir -p /app/www/conf

# -----------------------------------------------------------------------------
# Stage 2: Production runtime with nginx (minimal image)
# -----------------------------------------------------------------------------
FROM quay.io/nginx/nginx-unprivileged:alpine

# Add metadata labels
LABEL maintainer="OpenDJ"
LABEL description="OpenDJ Frontend Web Application"
LABEL org.opencontainers.image.source="https://github.com/opendj/opendj"


# Copy custom nginx configuration for SPA routing
COPY nginx.conf /etc/nginx/nginx.conf

# Copy built assets from builder stage
COPY --from=builder /app/www /usr/share/nginx/html



# Expose port 8080 (unprivileged nginx runs on 8080)
EXPOSE 8080

# Run nginx
CMD ["nginx", "-g", "daemon off;"]
